body {
  display: flex;
  background-color: #21252b;
  padding: 1em;
  padding: 0;
  column-count: 3;
}

div.group {
  border: 1px solid #181a1f;
  background-color: #282c34;
  padding: 0.6em;
  margin: 0.6em;
}

h1.group_title {
  cursor: default;
  font-size: 1.2em;
  font-weight: normal;
  font-family: "Verdana";
  color: white;
  position: relative;
  left: 0.4em;
  top: -1.6em;
  margin-bottom: -1em;
}


